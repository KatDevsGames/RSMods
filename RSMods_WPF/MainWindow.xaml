<Window x:Class="RSMods_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSMods_WPF"
        mc:Ignorable="d"
        Title="RSMods" Height="525" Width="1000">
	<Grid>
		<Button Name="Mods_Tab" Content="Mods" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Height="57" Width="88" Click="Mods_Tab_Click"/>
		<Button Name="OtherApps_Tab" Content="Other Apps" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Height="57" Width="88" Click="OtherApps_Tab_Click"/>
		<Button x:Name="Soundpacks_Tab" Content="Soundpacks" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Height="57" Width="88"/>
		<Button Name="Twitch_Tab" Content="Twitch" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" Height="57" Width="88"/>
		<Frame Name="MainFrame" Margin="115,10,19,10" NavigationUIVisibility="Hidden" Source="{Binding}"/>
		<Label Name="Version" Content="Version" HorizontalAlignment="Left" Margin="10,385,0,0" VerticalAlignment="Top"/>
	</Grid>
</Window>
